<div class="container">
  <div class="masthead">
    <h3>Gitlab Issue Form</h3>
  </div>
  <!-- Jumbotron -->
  <div class="jumbotron bg-info">
    <h2>Important message here</h2>

    <p class="lead">Cras justo odio, dapibus ac facilisis in, egestas eget quam. Fusce dapibus, tellus ac cursus commodo, tortor mauris condimentum nibh, ut fermentum massa justo sit amet.</p>

  </div>
  {{#if msg}}
    <div class="alert alert-dismissible alert-{{status}}">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>

      {{#each msg}}
        <li>{{this.msg}}</li>
      {{/each}}
    </div>
  {{/if}}

  <div class="row">
    <div class="col-md-8">

      <form action="/create" method="post" class="" enctype="multipart/form-data">
        <p>
          <small>Fields marked with * are mandatory</small>
        </p>

        <div class="form-group">
          <label for="project" class="control-label">
            *Project:
          </label>
          <br/>
          <select id="project" name="project" class="form-control">
            <option value="">Select a project...</option>
            {{#each projects}}
              <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
          </select>
        </div>

        <div class="form-group">
          <label for="title" class="control-label">
            *Title:
          </label>
          <br/>
          <input type="text" id="title" name="title" class="form-control" />

        </div>

        <div class="form-group">
          <label for="description" class="control-label">
            *Description:
          </label>
          <br/>
          <textarea id="description" name="description" class="form-control"></textarea>
        </div>


        <div class="form-group">
          <label for="assign" class="control-label">
            *Assign to:
          </label>
          <br/>
          <select id="assign" name="assign" class="form-control">
            {{#each users}}
              <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
          </select>
        </div>

        <div class="form-group">
          <label for="milestone" class="control-label">
            Select milestone:
          </label>
          <br/>
          <select id="milestone" name="milestone" class="form-control">
            <option value="">Select a project first...</option>
          </select>

          <p>
            OR
          </p>
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-default" disabled="disabled" data-toggle="modal" data-target="#myModal" id="milestone-btn">
            Create a new milestone
          </button>

        </div>


        <div class="form-group">
          <label for="time" class="control-label">
            Time due:
          </label>
          <br/>
          <input type="text" id="time" name="time" class="form-control timepicker" />

        </div>


        <div class="form-group">
          <label for="sreenshot" class="control-label">
            Screenshot <small>(max file size 10MB)</small>:
          </label>
          <input type="file" class="form-control" accept="image/*" id="screenshot" name="screenshot" capture="camera" />

        </div>

        <input type="submit" value="Submit issue" class="btn btn-lg btn-primary" />

      </form>
    </div>

  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <form action="/createmilestone" method="post" class="form-horizontal" id="add-milestone-form">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Add new Milestone</h4>
        </div>
        <div class="modal-body">

          <span class="msg"></span>

          <div class="form-group">
            <label for="title" class="control-label">
              Title:
            </label>
            <br/>
            <input type="text" id="title" name="title" class="form-control" />

          </div>

          <div class="form-group">
            <label for="description" class="control-label">
              Description:
            </label>
            <br/>
            <textarea id="description" name="description" class="form-control"></textarea>
          </div>


          <div class="form-group">
            <label for="date" class="control-label">
              Due date:
            </label>
            <br/>
            <input type="text" id="date" name="date" class="datepicker form-control" />
          </div>


        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <input type="submit" value="Save Milestone" class="btn btn-primary" />
        </div>
      </div>
    </form>
  </div>
</div>
